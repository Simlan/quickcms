                        <i></i>
                        <span>拓展</span>
                   </a>
                </li>
            </ul>
        </div>
    </div>
    
<% include brand %>
    
    <div class="container">
        <div class="ct">
            <div class="contents_menu">
                <div class="contents_title"><a href="/panel/groups"><i class="material-icons">group</i><span>用户组</span></a></div><ul>
                    <li><a href="/panel/users"><i class="material-icons">person</i><span>用户</span></a></li><li><a href="/panel/users/person"><i class="material-icons">assignment_ind</i><span>个人</span></a></li>
                </ul>
            </div>
            
            <div class="infomation">
                <div class="pd20">
                    新增用户组
                </div>
            </div>
            
            <div class="groups_edit">
                <div class="groups_editor metro">
                    <dl data-key="name">
                        <dt>名称</dt><dd>
                            <div class="pd15">
                                <input class="insert" value="<%= infomations.datas.name %>" placeholder="用户组名称" type="text">
                            </div>
                        </dd>
                        <div class="clear"></div>
                    </dl>
                    <dl data-key="guid">
                        <dt>GUID</dt><dd>
                            <div class="pd15">
                                <input class="insert" disabled="true" value="<%= infomations.datas.guid %>" placeholder="用户组guid" type="text">
                            </div>
                        </dd>
                        <div class="clear"></div>
                    </dl>
                    <dl data-key="role">
                        <dt>权限</dt><dd>
                            <div class="pd15">
                                <% var arr = eval(infomations.datas.roles); %>
                                <% infomations.roles.forEach(function(d,i){ %>
                                <ul class="groups_role_row">
                                    <% d.forEach(function(d1,i1){ %>
                                    <% var val =  arr[i][i1]; %>
                                    <li>
                                        <div class="form_check" data-key="<%= d1.key %>"><i <%= (val==1) ? ' class=sl' : '' %>><b></b></i><span><%= d1.name %></span></div>
                                    </li>
                                    <% }) %>
                                </ul>
                                <% }) %>
                            </div>
                        </dd>
                        <div class="clear"></div>
                    </dl>
                </div>
                <div class="groups_submit">
                    <a class="fr blue_btn" href="#">保存</a>
                    <div class="clear"></div>
                </div>
            </div>
        </div>
    </div>
    
    <%- include footer %>
</body>
</html>