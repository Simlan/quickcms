            <div class="infomation">
                <div class="pd20">
                    内容模型定义了内容需要的属性
                </div>
            </div>
            <div class="model">
            <% infomations.datas.forEach(function(d){ %>
                <div class="items">
                    <h4 class="blue"><%= d.name %></h4>
                    <% if(d.guid!='article'){ %>
                    <div class="items_actions">
                        <ul>
                            <li><a href="/panel/contents/model/edit?guid=<%= d.guid %>"><i class="material-icons">border_color</i><span>编辑</span></a></li>
                            <li><a class="remove_model" href="#" data-del="<%= d.guid %>"><i class="material-icons">delete</i><span>删除</span></a></li>
                        </ul>
                    </div>
                    <% } %>
                </div>
            <% }); %>
                <div class="model_btn">
                    <a class="model_btn_new fr" href="/panel/contents/model/new">新增</a>
                    <a class="model_btn_import fr" href="#"><span>导入</span><form action= "/panel/contents/model/import" method="post" enctype="multipart/form-data"><input name="model" type="file" accept="json/*"></form></a>
                    <div class="clear"></div>
                </div>
            </div>
            
        </div>
